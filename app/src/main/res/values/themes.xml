<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewFoods" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomChipStyleButton" parent="Widget.MaterialComponents.Chip.Action">

        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@string/marinade</item>
        <item name="android:backgroundTint">@color/dark_orange</item>
        <item name="android:radius">60dp</item>
        <item name="android:padding">16dp</item>
        <item name="background">@drawable/apply_custom_chip_style</item>

    </style>
</resources>